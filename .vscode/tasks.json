{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Build Directory",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (-not (Test-Path -Path ${workspaceFolder}/build)) { New-Item -ItemType Directory -Path ${workspaceFolder}/build }"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMake Configure",
            "dependsOn": "Create Build Directory",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/build",
                "-S",
                "${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMake Build Debug",
            "dependsOn": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task by CMake Tools."
        },
        {
            "label": "CMake Build Release",
            "dependsOn": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "CMake Clean",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Remove-Item -Recurse -Force ${workspaceFolder}/build"
            ],
            "problemMatcher": []
        }
    ]
}